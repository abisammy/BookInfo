@model Publisher
@{
    ViewData["Title"] = $"Edit publisher {Model.Name}";
    @* Keep the lsatpage tempdata so it is not cleared *@
    TempData.Keep("lastpage");
}
@* Publisher deletion form *@
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Publisher</h2>
            <br />
        </div>
        @* This declared uild inbullet points with the problems (if any) in the form *@
        <div asp-validation-summary="All"></div>
        @* Input for the name *@
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        @{
            @* Declare variable for current page ID as astring literals cannot be used in asp-route-currentpage *@
            string currentPage = $"PublisherEdit_{@Model.PublisherId}";
        }
        @* Submit buttons *@
        <button type="submit" class="btn btn-primary" style="width:150px"
            asp-route-PublisherId=@Model.PublisherId>Edit</button>
        <a asp-controller="LastPage" asp-action="Cancel" asp-route-currentpage="@currentPage"
            asp-route-message="Publisher not edited" class="btn btn-secondary" style="width:150px">Back</a>
    </div>
</form>

@section Scripts{
@{
    <partial name="_ValidationScriptsPartial" />
}
}
