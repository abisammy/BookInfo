@model dynamic
@{
    Author author = Model.Author;
    IOrderedQueryable<Book>? books = Model.Books;
    ViewData["Title"] = $"{author.Name}";
    TempData.Keep("lastpage");
    string currentpage = $"IndexAuthor_{author.AuthorId}";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h1 class="text-primary">@author.Name</h1>
        </div>              <div class="col-6 text-end">
            <a asp-controller="LastPage" asp-action="Return" asp-route-currentpage="@currentpage"
                class="btn btn-secondary">Back</a>
            <a asp-controller="Author" asp-action="Edit" asp-route-id="@author.AuthorId" class="btn btn-primary"> <i
                    class="bi bi-pencil"></i>&nbsp;&nbsp;Edit</a>
            <a asp-controller="Author" asp-action="Delete" asp-route-id="@author.AuthorId" class="btn btn-danger"> <i
                    class="bi bi-trash-fill"></i>&nbsp;&nbsp;Delete</a>
        </div>
    </div>
    <table class="table table-bordered table-striped" style="width:100%">
        <tr>
            <th class="text-end">Updated at</th>
            <td>@{
                    @author.UpdatedAt.ToLongTimeString()
                    <text>&nbsp;on&nbsp;</text>

                    @author.UpdatedAt.ToLongDateString()
                    ;
                }
            </td>
        </tr>
    </table>
    <br />
    <br />
    @{
        if (books.Count() == 0)
        {
            <em>
                <h3>This author has no books</h3>
            </em>

            <br />
        }
        else
        {
            <h2>Books</h2>
            ViewBag.Buttons = false;
            <partial name="../Book/_BookTable.cshtml" for="@books"></partial>
        }
    }
</div>