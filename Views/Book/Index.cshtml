@model Book
@{
    ViewData["Title"] = @Model.Name;
    TempData.Keep("lastpage");
    string currentpage = $"BookIndex_{Model.BookId}";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h1 class="text-primary">@Model.Name</h1>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="LastPage" asp-action="Return" asp-route-currentpage="@currentpage"
                class="btn btn-secondary">Back</a>
            @if (User.Identity.IsAuthenticated)
            {
                <a asp-controller="Book" asp-action="Edit" asp-route-id="@Model.BookId" class="btn btn-primary"> <i
                    class="bi bi-pencil"></i>&nbsp;&nbsp;Edit</a>
                <a asp-controller="Book" asp-action="Delete" asp-route-id="@Model.BookId" class="btn btn-danger">
                    <i class="bi bi-trash-fill"></i>&nbsp;&nbsp;Delete</a>
            }
        </div>
    </div>
    <p><em>@Model.Description</em></p>
    <table class="table table-bordered table-striped" style="width:100%">
        <tr>
            <th class="text-primary text-end">ISBN</th>
            <td>@Convert.ToInt64(Model.ISBN).ToString("###-##-#####-##-#")</td>
        </tr>
        <tr>
            <th class="text-end">Category</th>
            <td><a asp-controller="Category" asp-action="Index"
                    asp-route-id="@Model.Category.CategoryId">@Model.Category.Name</a></td>
        </tr>
        <tr>
            <th class="text-end">Author</th>
            <td>
                <a asp-controller="Author" asp-action="Index"
                    asp-route-id="@Model.Author.AuthorId">@Model.Author.Name</a>
            </td>
        </tr>
        <tr>
            <th class="text-end">Publisher</th>
            <td>
                <a asp-controller="Publisher" asp-action="Index"
                    asp-route-id="@Model.Publisher.PublisherId">@Model.Publisher.Name</a> </a>
            </td>
        </tr>
        <tr>
            <th class="text-end">Updated at</th>
            <td>@{
                    DateTime date = Model.UpdatedAt;
                    @date.ToLongTimeString()
                    <text>&nbsp;on&nbsp;</text>

                    @date.ToLongDateString()
                    ;
                }
            </td>
        </tr>
    </table>
</div>