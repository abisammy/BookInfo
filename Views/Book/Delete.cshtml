@model Book
@{
    ViewData["Title"] = $"Delete book {Model.Name}";
    TempData.Keep("lastpage");
}

<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <br />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="CategoryId"></label>
            <input disabled class="form-control" value="@Model.Category.Name" />
        </div>
        <div class="mb-3">
            <label asp-for="AuthorId"></label>
            <input disabled class="form-control" value="@Model.Author.Name" />
        </div>
        <div class="mb-3">
            <label asp-for="PublisherId"></label>
            <input disabled class="form-control" value="@Model.Publisher.Name" />
        </div>
        <div class="mb-3">
            <label asp-for="Description"></label>
            <input asp-for="Description" disabled class="form-control" />
        </div> <a asp-controller="LastPage" asp-action="Cancel" asp-route-message="Book not deleted" class="btn
            btn-secondary" style="width:150px">Back</a>
        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
    </div>
</form>