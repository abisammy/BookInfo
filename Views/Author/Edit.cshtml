@model Author
@{
    ViewData["Title"] = $"Edit author {Model.Name}";
    TempData.Keep("lastpage");
}

@* Author editing form *@
<form method="post" >
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Author</h2>
            <br />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px" asp-route-AuthorId=@Model.AuthorId>Edit</button>
        <a asp-controller="LastPage" asp-action="Cancel" asp-route-message="Author not edited" class="btn btn-secondary"
            style="width:150px">Back</a>

    </div>
</form>

@* Validate fields locally *@
@section Scripts{
@{
    <partial name="_ValidationScriptsPartial" />
}
}
