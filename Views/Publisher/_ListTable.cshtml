@using BookInfo.Models;

@model IOrderedQueryable<Publisher>;

@* Returns partial view of table of publishers, filtered in the controller by a search string *@

@* Displayed if there are no publishers *@
@if (Model.Count() == 0)
{
    <em>
        @if (ViewBag.hasItems == false)
        {
            <h3>There are currently no publishers</h3>
        }
        else
        {
            <h3>Invalid search</h3>
        }
    </em>
}
else
{
    @* Table for each of the publishers *@
    <table class="text-center align-middle table table-bordered table-striped">
        <thead>
            <tr>
                <th></th>
                <th>Name</th>
                @* If the user is authenticated show the buttons *@
                @if (User.Identity.IsAuthenticated)
                {
                    <th></th>
                }
            </tr>
        </thead>
        <tbody>
            @{
                int i = 0;
            }
            @* For each publisher... *@
            @foreach (var obj in Model)
            {
                i++;
                <tr>
                    @* Publisher number *@
                    <td width="15%">@i</td>
                    @* Publisher name *@
                    <td width="60%"><a asp-controller="Publisher" asp-action="Index"
                    asp-route-id="@obj.PublisherId">@obj.Name</a></td>
                    @* If the publisher is authenticated, edit and delete buttons *@
                    @if (User.Identity.IsAuthenticated)
                    {
                        <td>
                            <div class="btn-group text" role="group">
                                <a asp-controller="Publisher" asp-action="Edit" asp-route-id="@obj.PublisherId"
                        class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil"></i>&nbsp;&nbsp;Edit</a>
                                <a asp-controller="Publisher" asp-action="Delete" asp-route-id="@obj.PublisherId"
                        class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i>&nbsp;&nbsp;Delete</a>
                            </div>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
}