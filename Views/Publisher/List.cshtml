@{
    ViewData["Title"] = "Publishers";
    @* Keep the lastpage tempdata so it is not cleared *@
    TempData.Keep("lastpage");
}

@* List publishers in table *@
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h1 class="text-primary">Publishers</h1>
        </div>
        @* If the user is authenticated show the create button at the top *@
        @if (User.Identity.IsAuthenticated)
        {
            <div class="col-6 text-end">
                <a asp-controller="Publisher" asp-action="Create" class="btn btn-primary"><i
                    class="bi bi-plus-circle"></i>&nbsp;
                    Create New Publisher</a>
            </div>
        }
    </div>
    <div class="form-inline float-right">
        <label>Search</label>
        @* Have a text input for the value to search *@
        <input type="text" class="form-control" id="textSearch" />
    </div>
    @* SHorthand for inserting multiple newlines *@
    @for (int i = 0; i < 2; i++)
    {
        <br />
    }
    @* Use a partial view to search publishers and display in table *@
    <div id="listTable">
        <h1>Loading publishers...</h1>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script>
    @* On page load *@
        $(() => {
    @* Get from value in search bar *@
                getPublishers();

    @* Add event listener to update table value when value of textbox changes *@
                $("#textSearch").on("keyup", () => {
                    getPublishers();
                })
        });

    @* Call partial view with value of textbox *@
        function getPublishers() {
            $.ajax({
                url: '@Url.Action("SearchPublishers", "Publisher")',
                dataType: "html",
                method: "GET",
                data: { searchText: $("#textSearch").val() },
    @* When we get the data, update the value of the table witht he HTML returned *@
                success: function (res) {
                    $("#listTable").html("").html(res);
                },
                error: function (err) {
                    console.error(err);
                }
            })
        }
</script>
