@model Author
@{
    ViewData["Title"] = $"Delete author {Model.Name}";
    @* Keep the lastpage tempdata so it is not clared *@
    TempData.Keep("lastpage");
}

@* Author deletion form *@
<form method="post" asp-action="Delete">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Author</h2>
            <br />
        </div>
        <div class="mb-3">
            @* Value of the name *@
            <label asp-for="Name"></label>
            @* NOTE: the input is disabled as it is only meant to display the name that is about to be delted,
                and is not inteded for the user to modfiy the value it *@
            <input asp-for="Name" disabled class="form-control" />
        </div>
        @* Shbmit buttons *@
        <a asp-controller="LastPage" asp-action="Cancel" asp-route-message="Author not deleted" class="btn
            btn-secondary" style="width:150px">Back</a>
        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
    </div>
</form>
