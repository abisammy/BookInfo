@{
    ViewData["Title"] = "Categories";
    TempData.Keep("lastpage");
}

@* List categories in table *@
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h1 class="text-primary">Categories</h1>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary"><i
                    class="bi bi-plus-circle"></i>&nbsp;
                Create New Category</a>
        </div>
    </div>
    <div class="form-inline float-right">
        <label>Search</label>
        <input type="text" class="form-control" id="textSearch" />
    </div>
    @for (int i = 0; i < 2; i++)
    {
        <br />
    }
    <div id="listTable">
        <h1>Loading categories...</h1>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script>
    $(() => {
        getCategories();

    @* Update table when value of textbox changes *@
            $("#textSearch").on("keyup", () => {
                getCategories();
            })
    });

    @* Call partial view with value of textbox *@
        function getCategories() {
            $.ajax({
                url: '@Url.Action("SearchCategories", "Category")',
                dataType: "html",
                method: "GET",
                data: { searchText: $("#textSearch").val() },
                success: function (res) {
                    $("#listTable").html("").html(res);
                },
                error: function (err) {
                    console.error(err);
                }
            })
        }
</script>
