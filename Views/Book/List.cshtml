@{
    ViewData["Title"] = "Books";
    TempData.Keep("lastpage");
}

@* List books in multiple table separated by categories *@
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h1 class="text-primary">Books List</h1>
        </div>
    </div>
    <div class="form-inline float-right">
        <label>Search</label>
        <input type="text" class="form-control" id="textSearch" />
    </div>
    @for (int i = 0; i < 2; i++)
    {
        <br />
    }
    @* Use partial view to search books and display in tables *@
    <div id="listTable">
        <h1>Loading books...</h1>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script>
    $(() => {
        getBooks();

    @* Update tables when value of textbox changes *@
            $("#textSearch").on("keyup", () => {
                getBooks();
            })
    });

    @* Call partial view with value of textbox *@
        function getBooks() {
            $.ajax({
                url: '@Url.Action("SearchBooks", "Book")',
                dataType: "html",
                method: "GET",
                data: { searchText: $("#textSearch").val() },
                success: function (res) {
                    $("#listTable").html("").html(res);
                },
                error: function (err) {
                    console.error(err);
                }
            })
        }
</script>
