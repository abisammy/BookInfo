@model Publisher
@{
    ViewData["Title"] = $"Delete publisher {Model.Name}";
    @* Keep the lastpage tempdata so it is not cleared *@
    TempData.Keep("lastpage");
}
@* Publisher deletion form *@
<form method="post" asp-action="Delete">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Publisher</h2>
            <br />
        </div>
        <div class="mb-3">
            @* Value of th ename *@
            <div asp-validation-summary="All"></div>
            @* NOTE: the input is disabled as it is only meant to display the name that is about to be deleted, and is
                not intended for the user to modify the value of it *@
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control" />
        </div>
        @* Submit buttons *@
        <a asp-controller="LastPage" asp-action="Cancel" asp-route-message="Publisher not deleted" class="btn
            btn-secondary" style="width:150px">Back</a>
        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
    </div>
</form>